{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="../css/login.css">

{% endblock %}

{% block body %}
<body style="background-color: #ebebeb;" id="bodyLogin">
<nav class="navbar navbar-expand-lg navbar-light bg-dark"> </nav>

    <div style="background-image: url('{{ asset('images/campnou.jpg') }}'')">
        <form method="post" class="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 col-sm-6" style="color: #571dff;">
                    Vous êtes déjà connecté en tant que <span style="font-weight: bold">{{ app.user.username }}</span>, <a href="{{ path('app_logout') }}" style="color: red">Déconnexion</a>
                </div>
            {% endif %}



                <div class="container" style="margin-top: 100px; text-align: center; width: 24rem; box-shadow: 8px 8px 8px dimgrey;font-family: cursive; border-style: solid; border-radius: 5%; margin-bottom: 13rem">
                    <h1 class="h3 mb-3 font-weight-normal titre">Veuillez vous connecter</h1>
                    <div class="row">
                        <div class="col">
                            <label for="inputEmail">E-mail</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus style="color: #571dff;">

                        </div>
                    </div>

                    <label for="inputPassword" style="margin-top: 10px">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required style="color: #571dff;">

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">


                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 10px; margin-bottom: 10px;background-color: darkslategrey; border-color: white">
                       Connexion
                    </button>
                </div>


        </form>
    </div>
</body>
{% endblock %}
